---
import { languageList } from "../i18n/ui";
import { useTranslation } from "../i18n/utils";

const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslation(
    currentLang as keyof typeof languageList
);
---

<section class="w-full px-10 my-20" id="clients-section">
    <h1 class="text-3xl mb-12">
        {translateLabels("clients.title")}
    </h1>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-12">
        <div class="flex flex-col">
            <p
                class="text-gray-600 mb-5"
                set:html={translateLabels("clients.client1Description")}
            />
            <span class="text-gray-400">
                <span>-{translateLabels("clients.client1Name")}</span>
            </span>
        </div>
        <div class="flex flex-col">
            <p
                class="text-gray-600 mb-5"
                set:html={translateLabels("clients.client2Description")}
            />
            <span class="text-gray-400">
                <span>-{translateLabels("clients.client2Name")}</span>
            </span>
        </div>
        <div class="flex flex-col">
            <p
                class="text-gray-600 mb-5"
                set:html={translateLabels("clients.client3Description")}
            />
            <span class="text-gray-400">
                <span>-{translateLabels("clients.client3Name")}</span>
            </span>
        </div>
    </div>
    <div class="flex mt-15">
        <button
            class="bg-orange-500 text-white px-12 py-2 hover:bg-blue-600 transition duration-300"
        >
            <a href="/">{translateLabels("quote.button")}</a>
        </button>
    </div>
</section>
