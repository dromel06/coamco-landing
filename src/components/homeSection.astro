---
import { languageList } from "../i18n/ui";
import { useTranslation } from "../i18n/utils";

const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslation(
    currentLang as keyof typeof languageList
);
---

<section class="home-section">
    <div class="relative">
        <div class="absolute top-0 right-0 size-50">
            <img src="/imgs/logoCoamco-1.png" alt="Coamco Logo" />
        </div>
    </div>
    <div class="relative h-full flex items-end">
        <div class="inset-x-0 bottom-0">
            <div class="w-2xl pb-4">
                <h3 class="text-4xl font-bold text-white mb-4">
                    {translateLabels("home.primaryTitle")}
                </h3>
                <span class="text-2xl font-light text-white mb-6">
                    {translateLabels("home.secondaryTitle")}
                </span>
            </div>
            <button
                class="bg-white text-black px-20 py-3 hover:bg-gray-100 transition duration-300"
            >
                <a href="/contacto">{translateLabels("quote.button")}</a>
            </button>
        </div>
    </div>
</section>
<style>
    .home-section {
        padding: 2.5rem;
        background-image: url(/public/imgs/truck1.png);
        background-size: cover;
        width: 100%;
        height: 100vh;
    }
</style>
